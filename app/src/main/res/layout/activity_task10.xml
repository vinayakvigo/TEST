<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:orientation="vertical"
    tools:context=".main.task10.Task10">


    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fruits"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/t10Fruits">

    </com.google.android.material.checkbox.MaterialCheckBox>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flower"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
       android:id="@+id/t10Flower">

    </com.google.android.material.checkbox.MaterialCheckBox>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/t10Animal">

    </com.google.android.material.checkbox.MaterialCheckBox>


    <com.google.android.material.radiobutton.MaterialRadioButton
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/t10Male">

    </com.google.android.material.radiobutton.MaterialRadioButton>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="feMale"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/t10femele">

    </com.google.android.material.radiobutton.MaterialRadioButton>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t10RadioGroup"
        android:visibility="gone"
        >
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RED"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:id="@+id/t10Red">

        </com.google.android.material.radiobutton.MaterialRadioButton>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:id="@+id/t10Green">

        </com.google.android.material.radiobutton.MaterialRadioButton>
        <com.google.android.material.radiobutton.MaterialRadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:id="@+id/t10Blue">

    </com.google.android.material.radiobutton.MaterialRadioButton>

    </RadioGroup>

</LinearLayout>